<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml"
      xmlns="http://javafx.com/javafx/21.0.2"
      fx:controller="ftp.gusamyky.client.controller.ConsoleTabController"
      spacing="8">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <Label text="Konsola poleceń tekstowych" style="-fx-font-size: 16;"/>
    <TextArea fx:id="consoleArea"
              editable="false"
              wrapText="true"
              style="-fx-font-family: 'monospace'; -fx-font-size: 13;"/>
    <HBox spacing="5">
        <padding>
            <Insets top="5" right="5" bottom="5" left="5"/>
        </padding>
        <TextField fx:id="inputField"/>
        <Button fx:id="sendButton" text="Wyślij"/>
    </HBox>
</VBox>