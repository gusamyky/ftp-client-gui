<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/21.0.2"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="ftp.gusamyky.client.HistoryTabController"
      spacing="8">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <Label text="Historia operacji użytkownika" style="-fx-font-size: 16;"/>
    <HBox spacing="5">
        <padding>
            <Insets top="5" right="5" bottom="5" left="5"/>
        </padding>
        <Button fx:id="refreshHistoryButton"
                text="Odśwież"
                prefWidth="120"
                style="-fx-background-color: #64b5f6; -fx-text-fill: white;"/>
    </HBox>
    <TextArea fx:id="historyArea"
              editable="false"
              wrapText="true"
              style="-fx-font-family: 'monospace'; -fx-font-size: 13;"/>
</VBox>